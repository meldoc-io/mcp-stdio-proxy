{
  "name": "@meldocio/mcp-stdio-proxy",
  "version": "1.0.22",
  "description": "MCP stdio proxy for meldoc - connects Claude Desktop and Claude Code to meldoc MCP API",
  "bin": {
    "meldoc-mcp": "bin/meldoc-mcp-proxy.js"
  },
  "files": [
    "bin/**",
    "lib/**",
    ".claude-plugin/**",
    ".mcp.json",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "test": "jest",
    "test:local": "MELDOC_API_URL=http://localhost:8080 MELDOC_APP_URL=http://localhost:4200 jest",
    "test:watch": "jest --watch",
    "prepublishOnly": "npm test",
    "sync:publish": "node -e \"const pkg=require('./package.json');const pub=require('./package.publish.json');pub.version=pkg.version;require('fs').writeFileSync('./package.publish.json',JSON.stringify(pub,null,2)+'\\n')\"",
    "version:patch": "npm version patch --no-git-tag-version && npm run sync:publish",
    "version:minor": "npm version minor --no-git-tag-version && npm run sync:publish",
    "publish:patch": "npm run version:patch && node scripts/publish.js",
    "publish:minor": "npm run version:minor && node scripts/publish.js"
  },
  "keywords": [
    "mcp",
    "mcp-server",
    "claude",
    "claude-code",
    "meldoc",
    "documentation",
    "knowledge-base",
    "ai",
    "stdio",
    "proxy",
    "json-rpc"
  ],
  "author": "Meldoc",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meldoc-io/mcp-stdio-proxy.git"
  },
  "bugs": {
    "url": "https://github.com/meldoc-io/mcp-stdio-proxy/issues"
  },
  "homepage": "https://github.com/meldoc-io/mcp-stdio-proxy#readme",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "chalk": "^4.1.2",
    "clipboardy": "^4.0.0",
    "js-yaml": "^4.1.1",
    "open": "^10.0.0",
    "qrcode-terminal": "^0.12.0"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "bin/**/*.js",
      "lib/**/*.js"
    ],
    "testTimeout": 10000
  }
}
